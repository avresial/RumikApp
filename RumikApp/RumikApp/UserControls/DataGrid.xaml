<UserControl x:Class="RumikApp.UserControls.DataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RumikApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" ItemsSource="{Binding Users}" AutoGenerateColumns = "False" Name = "dataGrid" AlternatingRowBackground = "LightBlue" AlternationCount = "2"  >
            <DataGrid.Columns>
                <DataGridTextColumn Header = "Nazwa" Binding = "{Binding Name}" />
                <DataGridTextColumn Header = "Pojemność [ml]" Binding = "{Binding Capacity}" />
                <DataGridTextColumn Header = "Alcohol Percentaż" Binding = "{Binding AlcoholPercentage}"/>
                <DataGridTextColumn Header = "Ocena smaku" Binding = "{Binding Grade}"/>
                <DataGridTextColumn Header = "Ocena smaku z colą" Binding = "{Binding GradeWithCoke}"/>
                <DataGridTextColumn Header = "Kolor" Binding = "{Binding Color}"/>
            </DataGrid.Columns>

        </DataGrid>
        <Button Grid.Row="1" Content="Wróć do początku :)" Command="{Binding GoToMainMenu}"/>
    </Grid>
</UserControl>
