<UserControl x:Class="RumikApp.UserControls.InsertDataToDatabaseForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RumikApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
            
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>

                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                
            </Grid.RowDefinitions>

            <TextBlock Text="XAXAXAXAXAXAXA" FontWeight="Black" FontSize="50" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.ColumnSpan="4" Margin="0,50,0,0"/>

            <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40,0,40,0" >
                
                <Image MaxWidth="500" Source="{Binding Beverage.TestIcon}" ToolTip="Tu też kiedyś każde zdjęcie innym będzie :)" HorizontalAlignment="Center" />
                <Button Height="50" BorderBrush="Transparent" Command="{Binding LoadNewImage}" Content="Dodaj foticzku" />

            </StackPanel>

            <Grid Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" MaxWidth="1200" Margin="40,0,40,0">
            
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
            
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>


                <TextBlock Grid.Column="0" Grid.Row="0"  FontFamily="Bookman Old Style" FontWeight="Bold" FontSize="25" TextWrapping="Wrap" Text="Nazwa" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <TextBox Grid.Column="1" Grid.Row="0" Width="200" Height="25" />

                <TextBlock Grid.Column="0" Grid.Row="1" FontFamily="Bookman Old Style" FontSize="20" Text="Pojemność"  Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <TextBox Grid.Column="1" Grid.Row="1" Width="200" Height="25" />

                <TextBlock Grid.Row="2" FontFamily="Bookman Old Style" FontSize="20" Text="Zawartość alkoholu" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <TextBox Grid.Column="1" Grid.Row="2" Width="200" Height="25" />

                <TextBlock Grid.Row="3" FontFamily="Bookman Old Style" FontSize="20" Text="Kolor" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <TextBox Grid.Column="1" Grid.Row="3" Width="200" Height="25" />

                <TextBlock Grid.Column="0" Grid.Row="4" FontFamily="Bookman Old Style" FontSize="20" Text="Ocena solo" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <TextBox Grid.Column="1" Grid.Row="4" Width="200" Height="25" />

                <TextBlock Grid.Column="0" Grid.Row="5"  FontFamily="Bookman Old Style" FontSize="20" Text="Ocena z kolką" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <TextBox Grid.Column="1" Grid.Row="5" Width="200" Height="25" />

                <TextBlock Grid.Column="0" Grid.Row="6" FontFamily="Bookman Old Style" FontSize="20" Text="Cenka :)" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <TextBox Grid.Column="1" Grid.Row="6" Width="200" Height="25" />
            
            </Grid>
            
            <Grid Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" MaxHeight="400" Margin="40,0,40,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <ToggleButton Grid.Column="0" Width="100" Height="100" HorizontalAlignment="Center" Background="Transparent" BorderBrush="Transparent" Margin="5">
                    <Image Source="{Binding Beverage.Vanila.IMGSrc}" VerticalAlignment="Center" HorizontalAlignment="Center" Height="100" Width="100" />
                </ToggleButton>

                <ToggleButton Grid.Column="1" Grid.Row="0" Width="100" Height="100" HorizontalAlignment="Center" Background="Transparent" BorderBrush="Transparent" Margin="5">
                    <Image Source="{Binding Beverage.Nuts.IMGSrc}" VerticalAlignment="Center" HorizontalAlignment="Center" Height="100" Width="100" />
                </ToggleButton>

                <ToggleButton Grid.Column="2" Grid.Row="0" Width="100" Height="100" HorizontalAlignment="Center" Background="Transparent" BorderBrush="Transparent" Margin="5">
                    <Image Source="{Binding Beverage.Carmel.IMGSrc}" VerticalAlignment="Center" HorizontalAlignment="Center" Height="100" Width="100" />
                </ToggleButton>

                <ToggleButton Grid.Column="0" Grid.Row="1" Width="100" Height="100" HorizontalAlignment="Center" Background="Transparent" BorderBrush="Transparent" Margin="5">
                    <Image Source="{Binding Beverage.Smoke.IMGSrc}" VerticalAlignment="Center" HorizontalAlignment="Center" Height="100" Width="100" />
                </ToggleButton>

                <ToggleButton Grid.Column="1" Grid.Row="1" Width="100" Height="100" HorizontalAlignment="Center" Background="Transparent" BorderBrush="Transparent" Margin="5">
                    <Image Source="{Binding Beverage.Cinnamon.IMGSrc}" VerticalAlignment="Center" HorizontalAlignment="Center" Height="100" Width="100" />
                </ToggleButton>

                <ToggleButton Grid.Column="2" Grid.Row="1"  Width="100" Height="100" HorizontalAlignment="Center" Background="Transparent" BorderBrush="Transparent" Margin="5">
                    <Image Source="{Binding Beverage.Nutmeg.IMGSrc}" VerticalAlignment="Center" HorizontalAlignment="Center" Height="100" Width="100" />
                </ToggleButton>
                
                <ToggleButton Grid.Column="0" Grid.Row="2"  Width="100" Height="100" HorizontalAlignment="Center" Background="Transparent" BorderBrush="Transparent" Margin="5">
                    <Image Source="{Binding Beverage.Fruits.IMGSrc}" VerticalAlignment="Center" HorizontalAlignment="Center" Height="100" Width="100" />
                </ToggleButton>

                <ToggleButton Grid.Column="1" Grid.Row="2"  Width="100" Height="100" HorizontalAlignment="Center" Background="Transparent" BorderBrush="Transparent" Margin="5">
                    <Image Source="{Binding Beverage.Honey.IMGSrc}" VerticalAlignment="Center" HorizontalAlignment="Center" Height="100" Width="100" />
                </ToggleButton>

            </Grid>


            
        </Grid>
    </ScrollViewer>
</UserControl>
