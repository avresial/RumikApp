<UserControl x:Class="RumikApp.UserControls.MainControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RumikApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.ColumnSpan="2" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" FontSize="48" Text="Co chcesz zrobić, Piłacie?" Visibility="Visible"/>
            <Image Grid.ColumnSpan="2" Source="/IMGs/choose_wisely.png" RenderTransformOrigin="0.5,0.5" Height="400" Visibility="Collapsed"/>
            
            <Button Grid.Column="0" Grid.Row="1" Command="{Binding GetMeARum}" Width="300" Height="350" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top">
                <StackPanel Orientation="Vertical">
                    <Image Source="/IMGs/Milordzie2.png" RenderTransformOrigin="0.5,0.5"/>
                    <TextBlock HorizontalAlignment="Center" FontSize="25" Text="Daj, sam wybiorę"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="1" Grid.Row="1" Command="{Binding LetMeChoose}" Width="300" Height="350" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Top">
                <StackPanel Orientation="Vertical">
                    <Image Source="/IMGs/Milordzie2.png" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <ScaleTransform ScaleX="-1"/>
                        </Image.RenderTransform>
                    </Image>
                    <TextBlock HorizontalAlignment="Center" FontSize="25" Text="Dobierz mi rum" />
                </StackPanel>
            </Button>
        </Grid>
    </ScrollViewer>
</UserControl>
