<UserControl x:Class="RumikApp.UserControls.MainControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RumikApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Grid.Row="1"  Command="{Binding GetMeARum}" Height="106"  Width="179" >

            <StackPanel Orientation="Vertical">
                <Image Source="/IMGs/frog.gif" Height="50" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <ScaleTransform ScaleX="-1"/>
                    </Image.RenderTransform>
                </Image>
                <TextBlock>dobierz mi rum</TextBlock>
            </StackPanel>

        </Button>
        <Button Grid.Column="1" Grid.Row="1" Command="{Binding LetMeChoose}" Height="106" Width="179">

            <StackPanel Orientation="Vertical">
                <Image Source="/IMGs/frog.gif" Height="50" RenderTransformOrigin="0.5,0.5"/>
                <TextBlock>daj, sam wybiorę</TextBlock>
            </StackPanel>
        </Button>
        <TextBlock Grid.ColumnSpan="2" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Height="88" TextWrapping="Wrap"  Width="618" FontSize="48" Text="Co chcesz zrobić, Piłacie?"></TextBlock>
    </Grid>
</UserControl>
